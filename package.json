{
  "name": "koa-clean-starter",
  "version": "0.0.1",
  "description": "Base REST api web server built using Koa framework, typescript, clean arquitecture and some good practices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node -r dotenv/config dist/index.js",
    "prestart": "npm run build",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "test": "jest --forceExit",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage"
  },
  "author": "Angel Ulice Tabares Gonzalez <taho2509@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "cls-hooked": "^4.2.2",
    "correlation-id": "^4.0.0",
    "dotenv": "^10.0.0",
    "http-graceful-shutdown": "^3.1.1",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.1",
    "koa-router": "^10.0.0",
    "uuid": "^8.3.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^2.2.4",
    "@tsconfig/node14": "^1.0.1",
    "@types/cls-hooked": "^4.3.1",
    "@types/http-graceful-shutdown": "^2.3.0",
    "@types/jest": "^26.0.15",
    "@types/koa": "^2.11.6",
    "@types/koa__cors": "^3.0.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
