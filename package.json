{
  "name": "koa-simple-starter",
  "version": "1.0.0",
  "description": "Base REST api web server built using Koa framework and using typescript and some good practices",
  "main": "build/index.js",
  "scripts": {
    "start": "node -r dotenv/config build/index.js",
    "prestart": "npm run build",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "build": "tsc -p .",
    "lint": "standard --parser --fix typescript-eslint-parser --plugin typescript src/*.ts",
    "test": "jest --verbose"
  },
  "keywords": [],
  "author": "Ernesto Fuentes GÃ³mez",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.2.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-cors": "0.0.16",
    "koa-router": "^7.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-convert": "^1.2.2",
    "@types/koa-cors": "0.0.0",
    "@types/koa-router": "^7.0.40",
    "@types/winston": "^2.4.4",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "standard": "^12.0.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333",
    "typescript-eslint-parser": "^22.0.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
